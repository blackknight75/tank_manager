<h1>New Tank Feature</h1>
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey lighten-5">
      <div class="card-content black-text">
        <span class="card-title">Card Title</span>
        <%= form_for [@tank, @tank_feature] do |f| %>
        <p><%= f.label :name %></p>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.label :cost %>
        <%= f.text_field :cost %>
        <%= f.collection_select :tank_id, current_user.tanks, :id, :name %>
        <%= f.submit "Add Feature to Tank", :class => 'btn waves-effect waves-light btn' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
